            urlBuilder.Append(configuration["ApplicationInfo:mainURL"].ToString());
            urlBuilder.Append("/");
            urlBuilder.Append(configuration["ApplicationInfo:trainWithDocumentation"].ToString());

            foreach (string doc in documentation)
